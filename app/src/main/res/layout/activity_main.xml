<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:widget="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:gravity="center"
              android:background="#8D6E63">
    <!-- Color에 Resources를 사용하면 오류가 나더라... -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="@color/carbon_white"
        android:text="@string/app_name"/>

    <xyz.dcafe.touchingmessage.widgets.FloatingEditText
        android:id="@+id/input_name"
        android:hint="@string/input_name"
        android:layout_marginTop="50dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>

    <xyz.dcafe.touchingmessage.widgets.PaperButton
        android:id="@+id/button_login"
        widget:paper_text="@string/button_login"
        widget:paper_text_color="@color/title_color"
        android:layout_marginTop="20dp"
        android:layout_width="200dp"
        android:layout_height="64dp"
        android:onClick="onClick"/>

</LinearLayout>
